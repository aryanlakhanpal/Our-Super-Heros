@model SuperHeros.Models.Hero

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h1>@Model.Name</h1>
            <p><strong>Powers:</strong> @Model.Powers</p>
            <p>@Model.FullDescription</p>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Heroes List</a>
        </div>
    </div>
</div>
